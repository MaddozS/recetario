---
import { Icon } from "astro-icon/components";
// Check current page
const { currentPage } = Astro.props;
---

<header class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white p-6 rounded-2xl shadow-sm border border-slate-200" transition:animate="none">
  <div class="flex items-center gap-4">
    <div class="bg-indigo-600 p-3 rounded-xl text-white shadow-lg shadow-indigo-100">
      <Icon name='lucide:chef-hat' size={32} />
    </div>
    <div>
      <h1 class="text-2xl font-bold text-slate-800">ChefCost Pro</h1>
      <p class="text-slate-500 text-sm">Costeo de Recetas e Insumos</p>
    </div>
  </div>
  <div class="flex bg-slate-100 rounded-xl p-1 border border-slate-200">
    <a 
      href="/recipes/101"
      class:list={["px-6 py-2 rounded-lg text-sm font-semibold transition-all", currentPage === 'recipes' ? 'bg-white shadow-sm text-indigo-700' : 'text-slate-500 hover:text-slate-700']}
    >
      Recetario
    </a>
    <a 
      href="/ingredients"
      class:list={["px-6 py-2 rounded-lg text-sm font-semibold transition-all", currentPage === 'ingredients' ? 'bg-white shadow-sm text-indigo-700' : 'text-slate-500 hover:text-slate-700']}
    >
      Inventario
    </a>
  </div>
</header>